
<h1>Listing Issuers</h1>

<%= link_to 'New Issuer', new_issuer_path, class: "btn btn-xs btn-success" %>

<table>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

  <% @issuers.each do |issuer| %>
    <tr>
      <td><%= issuer.name %></td>
<!--      <td><%#= link_to 'Show', issuer_path(issuer) %></td>-->
      <td><%= link_to 'Edit', edit_issuer_path(issuer),  class: "btn btn-xs btn-primary" %></td>
      <td><%= link_to 'Delete', issuer_path(issuer),
                      method: :delete,
                      data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %></td>

    </tr>
  <% end %>
</table>