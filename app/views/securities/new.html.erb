<%= form_for([@issuer, @security]) do |f| %>


  <% if @security.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@security.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @security.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :issuer_name %><br />
    <%= f.select :issuer_id, options_for_select(Issuer.all.map{|s|[s.name, s.id]}) %>
  </div>


  <div class="field">
    <%= f.label :security_type %><br />
    <%= f.select :security_type_id, options_for_select(SecurityType.all.map{|s|[s.name, s.id]}) %>
  </div>


  <p>
    <%= f.label :security_name %><br>
    <%= f.text_field :security_name %>
  </p>

  <p>
    <%= f.label :isin %><br>
    <%= f.text_field :isin %>
  </p>
  <p>
    <%= f.label :issue_date %><br>
    <%= f.date_field :issue_date %>
  </p>

  <p>
    <%= f.label :maturity_date %><br>
    <%= f.date_field :maturity_date %>
  </p>

  <p>
    <%= f.label :outstanding_stock %><br>
    <%= f.text_field :outstanding_stock %>
  </p>

  <p>
    <%= f.label :coupon_rate %><br>
    <%= f.text_field :coupon_rate %>
  </p>
  <p>
    <%= f.label :face_value %><br>
    <%= f.text_field :face_value %>
  </p>

  <div class="field">
    <%= f.label :interest_frequency %><br />
    <%= f.select :interest_frequency_id, options_for_select(InterestFrequency.all.map{|s|[s.frequency, s.id]}) %>
  </div>



  <p>
    <%= f.submit %>
  </p>
<% end %>

